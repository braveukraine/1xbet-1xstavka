<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true">
        <set>
            <objectAnimator android:duration="400" android:valueTo="2.0dip" android:valueType="floatType" android:propertyName="translationZ" />
        </set>
    </item>
    <item android:state_selected="true">
        <set>
            <objectAnimator android:duration="400" android:valueTo="4.0dip" android:valueType="floatType" android:propertyName="translationZ" />
        </set>
    </item>
    <item>
        <set>
            <objectAnimator android:duration="@android:integer/config_shortAnimTime" android:valueTo="0" android:valueType="floatType" android:propertyName="translationZ" />
        </set>
    </item>
</selector>