<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/corner_radius_4" />
            <solid android:color="?contentBackgroundNew" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape>
                <corners android:radius="@dimen/corner_radius_4" />
                <gradient android:startColor="@color/market_dark_orange_new" android:endColor="@color/market_yellow_new" android:angle="0.0" />
            </shape>
        </scale>
    </item>
</layer-list>